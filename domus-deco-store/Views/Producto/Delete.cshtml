@model domus_deco_store.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}
@section Styles {
    <link rel="stylesheet" href="~/css/producto-delete.css" />
}


<div class="container py-4 py-md-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

            <div class="text-center mb-4">
                <h1 class="h3 fw-bold">Eliminar Producto</h1>
                <p class="text-muted">Confirma la eliminación permanente del catálogo</p>
            </div>

            <div class="alert alert-warning d-flex align-items-center mb-4 shadow-sm">
                <span class="material-symbols-outlined me-3 text-warning" style="font-size: 2rem;">
                    warning
                </span>
                <div>
                    <h6 class="fw-bold mb-1">
                        ¿Estás seguro que deseas eliminar este producto?
                    </h6>
                    <small>Esta acción es irreversible.</small>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="row g-0">

                    <div class="col-4">
                        <img src="@Model.ImagenUrl"
                             class="img-fluid w-100 h-100 object-fit-cover rounded-start"
                             alt="@Model.Nombre" />
                    </div>

                    <div class="col-8">
                        <div class="card-body">

                            <span class="badge bg-primary-subtle text-primary mb-2">
                                @Model.Categoria?.Nombre
                            </span>

                            <h4 class="fw-bold mb-3">
                                @Model.Nombre
                            </h4>

                            <dl class="row mb-0">
                                <dt class="col-5 small text-muted">Precio</dt>
                                <dd class="col-7 small fw-semibold">
                                    $@Model.Precio
                                </dd>

                                <dt class="col-5 small text-muted">Stock</dt>
                                <dd class="col-7 small fw-semibold">
                                    @Model.Cantidad unidades
                                </dd>

                                <dt class="col-5 small text-muted">Marca</dt>
                                <dd class="col-7 small fw-semibold">
                                    @Model.Marca?.Nombre
                                </dd>
                            </dl>

                        </div>
                    </div>

                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />

                <div class="d-grid gap-3">

                    <button type="submit"
                            class="btn btn-danger btn-lg shadow-sm d-flex align-items-center justify-content-center">
                        <span class="material-symbols-outlined me-2">
                            delete_forever
                        </span>
                        Eliminar Producto
                    </button>

                    <a asp-action="Index"
                       class="btn btn-outline-secondary btn-lg border-0">
                        Cancelar y volver
                    </a>

                </div>
            </form>

        </div>
    </div>
</div>
