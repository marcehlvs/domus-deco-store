@model domus_deco_store.Models.Marca

@section Styles {
    <link rel="stylesheet" href="~/css/admin-crud.css" />
}

@{
    ViewBag.Action = "Edit";
    ViewBag.ButtonText = "Guardar Cambios";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">

            <div class="card shadow card-form">
                <div class="card-body p-4">

                    <div class="text-center mb-4">
                        <h1 class="h4 fw-bold mb-1">Editar Marca</h1>
                        <p class="text-muted small mb-0">
                            Modifica el nombre de la marca
                        </p>
                    </div>

                    <partial name="_MarcaForm" />

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
