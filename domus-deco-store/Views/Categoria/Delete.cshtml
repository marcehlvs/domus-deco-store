@model domus_deco_store.Models.Categoria

@section Styles {
    <link rel="stylesheet" href="~/css/admin-crud.css" />
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">

            <div class="text-center mb-4">
                <h1 class="h4 fw-bold">Eliminar Categoría</h1>
                <p class="text-muted">
                    Esta acción es irreversible
                </p>
            </div>

            <div class="alert alert-warning d-flex align-items-center mb-4">
                <span class="material-symbols-outlined me-3 text-warning">
                    warning
                </span>
                <div>
                    ¿Estás seguro de que quieres eliminar esta categoría?
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h5 class="fw-bold mb-2">@Model.Nombre</h5>
                    <small class="text-muted">
                        Productos asociados: @Model.Productos.Count
                    </small>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />

                <div class="d-grid gap-3">
                    <button type="submit"
                            class="btn btn-danger btn-lg d-flex align-items-center justify-content-center gap-2">
                        <span class="material-symbols-outlined">
                            delete_forever
                        </span>
                        Eliminar Categoría
                    </button>

                    <a asp-action="Index"
                       class="btn btn-outline-secondary btn-lg border-0">
                        Cancelar
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>

